<!DOCTYPE html>
<html>
  <head>
    <title>BirdAnnotation</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= javascript_include_tag "application" %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%#= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
  </head>
  <body>
    <div class="container">
        <div class="navbar navbar-default bg-primary">
            <% if logged_in? %>
                <p class="text-white">（仮）野鳥アノテーションシステム</p>

                <%= link_to("管理者用", admins_main_path, {class: "nav-item nav-link text-white "}) %>
                <%#= link_to("マイページ", works_main_path, {class: "nav-item nav-link text-white active"}) %>
                <%= link_to works_main_path do %>
                    <span>
                        <p class="h5 text-white d-inline"><%= current_user.name %></p>
                        <i class="far fa-user fa-2x text-white d-inline"></i>
                    </span>
                <% end %>

                <%= link_to logout_path,method: :delete do %>
                    <spna><i class="fas fa-sign-out-alt fa-2x text-white"></i></spna>
                <% end %>
                <%#= link_to("ログアウト", logout_path, { method: :delete, class: "nav-item nav-link text-white"}) %>
            <% else %>
                <p class="text-white">（仮）野鳥アノテーションシステム</p>
                <%#= link_to("新規登録", new_user_path, {class: "nav-item nav-link text-white"}) %>
                <%#= link_to("ログイン", login_path, {class: "nav-item nav-link text-white"}) %>
            <% end %>
        </div>
    <%= yield %>
    </div>
    <script>
      $(function(){
        $(".alert").fadeOut(5000);
      })
    </script>
  </body>
</html>
